---

<Layout
  title="Executive Assistant Services | Helm"
  description="Empower your productivity with a dedicated executive assistant. Free up your schedule and focus on what you do best with our professional EAs."
>
  <!-- Hero Section -->
  <section class="relative min-h-[400px] sm:min-h-[500px] flex items-center justify-center" style="background: linear-gradient(135deg, #434b6d 0%, #343a5a 100%);">
    <div class="absolute inset-0 grid-background"></div>
    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20 text-center">
      <h1 class="text-white mb-4 sm:mb-6 hero-title-responsive">
        Empower Your Productivity with a Dedicated<br class="hidden lg:block" /> Executive Assistant
      </h1>
      <p class="text-base sm:text-lg lg:text-xl text-gray-200 mb-6 sm:mb-8 max-w-3xl mx-auto">
        Free up your schedule and focus on what you do best with our professional EAs.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-lg mx-auto">
        <button
          data-open-quote-modal
          class="inline-flex items-center justify-center font-semibold text-white transition-all duration-200 hero-btn-responsive btn-custom-quote"
        >
          Get a Custom Quote
        </button>
        <button
          data-open-learn-more-modal
          class="inline-flex items-center justify-center font-semibold text-white transition-all duration-200 hero-btn-responsive btn-learn-more"
        >
          Learn More
        </button>
      </div>
    </div>
  </section>

  <!-- Video Hero Section -->
  <section class="bg-gradient-to-b from-gray-50 to-white">
    <div class="w-full">
      <button
        id="video-thumbnail"
        class="relative block w-full overflow-hidden group cursor-pointer"
      >
        <img
          src="/images/executive-assistant-page/Regina-Sanchez-v1.png"
          alt="Watch testimonial video"
          class="w-full h-auto object-cover"
        />
        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-20 group-hover:bg-opacity-30 transition-all duration-300">
          <div class="w-20 h-20 flex items-center justify-center bg-white bg-opacity-90 rounded-full group-hover:bg-opacity-100 group-hover:scale-110 transition-all duration-300">
            <svg class="w-10 h-10 text-brand-orange ml-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
        </div>
      </button>
    </div>
  </section>

  <!-- Video Modal -->
  <div id="video-modal" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
      <div class="relative bg-black rounded-lg overflow-hidden shadow-xl transform transition-all w-full max-w-7xl">
        <div class="bg-black p-4 sm:p-6">
          <div class="flex justify-end mb-2">
            <button id="close-video-modal" type="button" class="text-white hover:text-gray-300 transition-colors">
              <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <div class="aspect-video">
            <iframe
              id="youtube-iframe"
              width="100%"
              height="100%"
              src=""
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const videoThumbnail = document.getElementById('video-thumbnail');
    const videoModal = document.getElementById('video-modal');
    const closeModalBtn = document.getElementById('close-video-modal');
    const youtubeIframe = document.getElementById('youtube-iframe');
    const videoUrl = 'https://www.youtube.com/embed/RkDmKdlkXSs?si=w3_njg4MBTqeXY7H&autoplay=1';

    videoThumbnail?.addEventListener('click', () => {
      videoModal?.classList.remove('hidden');
      youtubeIframe?.setAttribute('src', videoUrl);
    });

    closeModalBtn?.addEventListener('click', () => {
      videoModal?.classList.add('hidden');
      youtubeIframe?.setAttribute('src', '');
    });

    videoModal?.addEventListener('click', (e) => {
      if (e.target === videoModal || e.target === videoModal.firstElementChild) {
        videoModal.classList.add('hidden');
        youtubeIframe?.setAttribute('src', '');
      }
    });
  </script>

  <RoleTestimonials testimonials={testimonials} />

  <!-- Client Testimonial Video Section -->
  <section class="py-12 sm:py-16" style="background: linear-gradient(135deg, #e8e9f3 0%, #d4d7e8 100%);">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 items-center max-w-7xl mx-auto">
        <div>
          <h2 class="testimonial-video-title text-gray-900 mb-4 sm:mb-6">
            Here's What One of Our Clients<br class="hidden sm:block" />Had to Say!
          </h2>
        </div>
        <div>
          <video
            controls
            class="w-full rounded-xl shadow-xl"
          >
            <source src="/images/executive-assistant-page/Jeremiah-Patriot-Testimonial-1.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </section>

  <CompanyLogos />

  <WhyChoose
    title="Why Choose Our Executive Assistants?"
    reasons={whyChooseReasons}
    imageSrc="/images/executive-assistant-page/Why Choose Our Executive.webp"
    imageAlt="Executive Assistant"
  />

  <section class="pt-8 pb-12 sm:pb-20 lg:pb-24" style="background-color: #F5F5F5;">
    <div class="w-full px-4 sm:px-8 md:px-12 lg:px-16">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-gray-900 mb-4 sm:mb-8 support-services-title">
          What Your Helm Assistant Can Support You With
        </h2>
      </div>

      <SupportServicesGrid services={supportServices} buttonText="Request a demo" openModal={true} />
    </div>
  </section>

  <!-- A-Player Executive Assistant Section -->
  <section class="py-12 sm:py-16" style="background: linear-gradient(135deg, #434b6d 0%, #343a5a 100%);">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-bold text-white mb-6 sm:mb-8 pricing-title-responsive">
          A-Player Executive Assistant
        </h2>
        <div class="mb-6 sm:mb-8">
          <div class="font-bold text-white mb-2 pricing-amount-responsive">$23</div>
          <div class="text-base sm:text-lg lg:text-xl text-gray-300">per hour</div>
        </div>
        <div class="grid grid-cols-1 gap-3 sm:gap-4 text-left mb-8 sm:mb-12 max-w-2xl mx-auto">
          {aPlayerFeatures.map((feature) => (
            <div class="flex items-center gap-3 text-white">
              <img src="/images/executive-assistant-page/check-sign.png" alt="Check" class="flex-shrink-0 check-icon-responsive" />
              <span class="feature-text-responsive">{feature}</span>
            </div>
          ))}
        </div>
        <p class="text-base sm:text-lg lg:text-xl text-white mb-6 sm:mb-8 px-4">
          Ready to enhance your productivity? Get a personalized quote tailored to your specific needs today!
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center max-w-lg mx-auto">
          <button
            data-open-quote-modal
            class="inline-flex items-center justify-center font-semibold text-white transition-all duration-200 pricing-btn-responsive btn-custom-quote"
          >
            Get a Custom Quote
          </button>
          <button
            data-open-learn-more-modal
            class="inline-flex items-center justify-center font-semibold text-white transition-all duration-200 pricing-btn-responsive btn-learn-more"
          >
            Learn More
          </button>
        </div>
      </div>
    </div>
  </section>

  <FAQSection faqs={faqs} />

  <HowItWorksSteps steps={howItWorksSteps} />
</Layout>

<style>
  /* Hero Title Responsive */
