    font-size: 28px;
    font-weight: 600;
    line-height: 1.2;
  }

  @media (min-width: 640px) {
    .hero-title-responsive {
      font-size: 38px;
    }
  }

  @media (min-width: 1024px) {
    .hero-title-responsive {
      font-size: 48px;
    }
  }

  @media (min-width: 1280px) {
    .hero-title-responsive {
      font-size: 55px;
    }
  }

  /* Hero Button Responsive */
  .hero-btn-responsive {
    padding: 15px 20px;
    font-size: 16px;
  }

  /* Pricing Section Title Responsive */
  .pricing-title-responsive {
    font-size: 32px;
  }

  @media (min-width: 640px) {
