---
import Layout from '../../layouts/Layout.astro';
import BookModal from '../../components/BookModal.jsx';

const pageTitle = "How Companies Get Their Sh*T Together";
const pageDescription = "You'd love to let go of the day-to-day operationâ€¦ But who will take care of the business? They will. Welcome to freedom. Welcome to Helm.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="pt-20 bg-white min-h-screen">
    <div class="w-full px-8 sm:px-12 lg:px-16 py-12">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <div class="lg:col-span-2">
            <div class="mb-8">
              <h1 class="text-4xl sm:text-5xl font-bold text-brand-navy mb-2">
                How Companies Get Their Sh*T Together
              </h1>
              <div class="w-16 h-1 bg-orange-500 mt-4"></div>
            </div>

            <div class="bg-white rounded-lg mb-8">
              <img
                src="/images/resources-page/the-system-how-companies-get-their-shit-together.jpg"
                alt="The System: How Companies Get Their Sh*t Together"
                class="w-full max-w-md mx-auto rounded-lg shadow-lg"
              />
            </div>

            <div class="prose prose-lg max-w-none mb-8">
              <p class="text-xl text-gray-700 mb-6 text-center lg:text-left">
                But who will take care of the business?
              </p>
              <p class="text-xl text-gray-700 mb-6 text-center lg:text-left">
                They will.
              </p>

              <p class="text-lg text-gray-700 mb-4 text-center lg:text-left">
                Welcome to <strong>freedom.</strong>
              </p>
              <p class="text-lg text-gray-700 mb-4 text-center lg:text-left">
                Welcome to <strong>Helm.</strong>
              </p>
              <p class="text-lg text-gray-700 italic mb-8 text-center lg:text-left">
                Josh Klenoff, Founder
              </p>

              <div class="my-8 flex justify-center lg:justify-start">
                <img
                  src="/images/coaching-page/helm-ceo-josh-klenoff-signature.webp"
                  alt="Josh Klenoff Signature"
                  class="w-32 sm:w-40 lg:w-48 h-auto"
                />
              </div>

              <div class="mt-8 flex justify-center lg:justify-start">
                <button
                  data-open-book-modal
                  class="inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 !bg-[#EC7A00] hover:!bg-[#d66d00] text-white text-sm sm:text-base font-semibold rounded-full transition-all duration-300 border-2 border-white shadow-lg hover:shadow-xl"
                >
                  Get the book, free
                  <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                    <path d="M10 8l6 4-6 4V8z"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <div class="lg:col-span-1">
            <div class="sticky top-24">
              <div class="bg-gray-50 rounded-2xl p-6 mb-8">
                <img
                  src="/images/resources-page/The Best VA Services For Your Business.webp"
                  alt="The Best VA Services For Your Business"
                  class="w-full rounded-lg mb-4"
                />
              </div>

              <div class="space-y-4">
                <a href="/free-resources#" class="block group">
                  <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-all duration-300">
                    <div class="flex gap-4">
                      <img
                        src="/images/resources-page/The Best VA Services For Your Business.webp"
                        alt="Best VA Services"
                        class="w-20 h-20 object-cover rounded"
                      />
                      <div>
                        <h3 class="font-semibold text-brand-navy group-hover:text-orange-500 transition-colors text-[22px]">
                          The Best VA Services For Your Business
                        </h3>
                      </div>
                    </div>
                  </div>
                </a>

                <a href="/free-resources/how-companies-get-their-sht-together/" class="block group">
                  <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-all duration-300">
                    <div class="flex gap-4">
                      <img
                        src="/images/resources-page/the-system-how-companies-get-their-shit-together.jpg"
                        alt="How companies get their sh*t together"
                        class="w-20 h-20 object-cover rounded"
                      />
                      <div>
                        <h3 class="font-semibold text-brand-navy group-hover:text-orange-500 transition-colors text-[22px]">
                          How companies get their sh*t together
                        </h3>
                      </div>
                    </div>
                  </div>
                </a>

                <a href="/free-resources#" class="block group">
                  <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-all duration-300">
                    <div class="flex gap-4">
                      <img
                        src="/images/resources-page/ audit-your-company-in-5-minute.webp"
                        alt="Audit Your Company"
                        class="w-20 h-20 object-cover rounded"
                      />
                      <div>
                        <h3 class="font-semibold text-brand-navy group-hover:text-orange-500 transition-colors text-[22px]">
                          How to Audit Your Entire Company in Five Minutes to See What's Working and What's Not
                        </h3>
                      </div>
                    </div>
                  </div>
                </a>
              </div>

              <div class="mt-8 bg-brand-navy rounded-2xl p-6 text-center">
                <h3 class="text-xl font-bold text-white mb-4">Follow Solutions Review</h3>
                <div class="flex justify-center gap-4">
                  <a href="#" class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-brand-navy hover:bg-gray-100 transition-colors">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>
                  <a href="#" class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-brand-navy hover:bg-gray-100 transition-colors">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                  <a href="#" class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-brand-navy hover:bg-gray-100 transition-colors">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <BookModal client:load />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const bookButton = document.querySelector('[data-open-book-modal]');
    if (bookButton) {
      bookButton.addEventListener('click', (e) => {
        e.preventDefault();
        const trigger = document.querySelector('[data-book-modal-trigger]') as HTMLButtonElement;
        trigger?.click();
      });
    }
  });
</script>
