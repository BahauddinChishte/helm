---
import Layout from '../layouts/Layout.astro';

const pageTitle = "The Best VA Services For Your Business";
const pageDescription = "As a business owner, your time is valuable. Why get bogged down with routine tasks when you could focus on growth and innovation?";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="pt-20 bg-white min-h-screen">
    <div class="w-full px-8 sm:px-12 lg:px-16 py-12">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
          <div class="lg:col-span-2">
            <div class="mb-8">
              <h1 class="text-4xl sm:text-5xl font-bold text-brand-navy mb-2">
                The Best VA Services For Your Business
              </h1>
              <div class="w-16 h-1 bg-orange-500 mt-4"></div>
            </div>

            <div class="bg-white rounded-lg mb-8">
              <img
                src="/images/resources-page/The Best VA Services For Your Business.webp"
                alt="Virtual Assistant working on laptop"
                class="w-full rounded-lg shadow-lg"
              />
