    image: "https://images.pexels.com/photos/3771089/pexels-photo-3771089.jpeg?auto=compress&cs=tinysrgb&w=1200&h=675&fit=crop",
    videoUrl: "#"
  },
  {
    id: 5,
    name: "Sarah Mitchell",
    role: "Founder, TechStart Solutions",
    content: "This system transformed how we operate. Our team is aligned, our processes are clear, and we're growing faster than ever before. The accountability framework alone was worth it.",
