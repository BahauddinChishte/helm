---

<div class="group bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-brand-orange/20 h-full hover:-translate-y-1">
  <div class="flex flex-col h-full">
    {iconSvg && (
      <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-brand-orange/10 to-brand-orange/5 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
        <div class="w-7 h-7 text-brand-orange" set:html={iconSvg} />
      </div>
    )}

    <h3 class="text-2xl font-bold text-brand-navy mb-4 group-hover:text-brand-orange transition-colors duration-300">
      {title}
    </h3>

    <p class="text-brand-slate leading-relaxed mb-6 flex-grow">
      {description}
    </p>

    <a
      href="/contact"
      class="inline-flex items-center text-brand-orange font-semibold hover:text-brand-orangeDark transition-all duration-300 group-hover:gap-3 gap-2"
      data-track={`service-card-${title.toLowerCase().replace(/\s+/g, '-')}`}
    >
      {buttonText}
      <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</div>
