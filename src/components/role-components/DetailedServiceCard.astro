---
import Button from '../Button.astro';

interface ServiceItem {
  label: string;
  description: string;
}

interface Service {
  title: string;
  icon: string;
  items: ServiceItem[];
}

interface Props {
  services: Service[];
  sectionTitle?: string;
}

const { services, sectionTitle = "What Your Helm Assistant Can Support You With" } = Astro.props;
---

<section class="pt-8 pb-20 sm:pt-12 sm:pb-24 lg:pt-16 lg:pb-28" style="background-color: #F5F5F5;">
  <div class="w-full px-4 sm:px-8 md:px-12 lg:px-16">
    <div class="text-center mb-12">
      <h2 class="text-gray-900 mb-8" style="font-size: 32px; font-weight: 500;">
        {sectionTitle}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 max-w-7xl mx-auto">
      {services.map((service) => (
        <div class="group bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-brand-orange/20 h-full hover:-translate-y-1">
          <div class="flex flex-col h-full">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-brand-orange/10 to-brand-orange/5 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 mx-auto">
              <img src={service.icon} alt={service.title} class="w-10 h-10 object-contain" />
            </div>

            <h3 class="text-xl sm:text-2xl font-bold text-brand-navy mb-4 text-center group-hover:text-brand-orange transition-colors duration-300">
              {service.title}
            </h3>

            <div class="space-y-3 sm:space-y-4 mb-6 flex-grow">
              {service.items.map((item) => (
                <div class="text-sm">
                  <span class="font-semibold text-brand-navy">{item.label}</span>
                  <span class="text-brand-slate"> {item.description}</span>
                </div>
              ))}
            </div>

            <div class="text-center">
              <a
                href="#"
                data-open-quote-modal
                class="inline-flex items-center text-brand-orange font-semibold hover:text-brand-orangeDark transition-all duration-300 group-hover:gap-3 gap-2"
              >
                Find my assistant
                <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
