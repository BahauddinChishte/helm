---
interface Testimonial {
  quote: string;
  name: string;
  role: string;
  image: string;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section class="py-12 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-[1400px] mx-auto">
      {testimonials.map((testimonial) => (
        <div class="text-left">
          <div class="flex mb-4">
            {[...Array(5)].map((_, i) => (
              <svg class="w-5 h-5" fill="#474BE1" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <p class="text-gray-700 text-sm mb-4 leading-relaxed font-bold">{testimonial.quote}</p>
          <div class="flex items-center gap-3">
            <img src={testimonial.image} alt={testimonial.name} class="w-12 h-12 rounded-full object-cover" />
            <div class="text-left">
              <p class="font-semibold text-brand-navy text-sm">{testimonial.name}</p>
              <p class="text-gray-600 text-xs">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
