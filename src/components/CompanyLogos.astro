---
import logos from '../data/logos.json';
---

<section class="pt-6 pb-12 sm:pt-10 sm:pb-20 lg:pt-12 lg:pb-24 bg-gray-50">
  <div class="w-full px-4 sm:px-8 md:px-12 lg:px-16">
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-7 gap-8 sm:gap-8 md:gap-6">
      {logos.map((logo) => (
        <div class="flex items-center justify-center p-4 sm:p-3">
          <img
            src={logo.image}
            alt={logo.name}
            class="w-full h-auto max-h-16 sm:max-h-14 md:max-h-16 object-contain"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>
