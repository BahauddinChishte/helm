---
import Button from './Button.astro';

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  primaryCTA?: { text: string; href?: string; openModal?: boolean };
  secondaryCTA?: { text: string; href?: string; openModal?: boolean };
  image?: string;
  imageAlt?: string;
  imageCaption?: string;
}

const {
  title,
  subtitle,
  description,
  primaryCTA,
  secondaryCTA,
  image,
  imageAlt = '',
  imageCaption
} = Astro.props;
---

<section class="relative bg-gray-50 overflow-hidden pt-28 pb-12 sm:pt-32 sm:pb-16 md:pt-36 lg:pt-40 lg:pb-20">
  <div class="w-full px-4 sm:px-8 md:px-12 lg:px-16 max-w-[1920px] mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-[65%_35%] gap-8 lg:gap-12 items-center">
      <div class="space-y-6 sm:space-y-8 max-w-2xl lg:max-w-4xl text-center lg:text-left mx-auto lg:mx-0">
        <h1 class="font-semibold leading-tight hero-title" style="color: rgb(52, 58, 90);">
          {title}
        </h1>

        {description && (
          <p class="hero-description leading-relaxed" style="color: rgb(52, 58, 90);">
            {description}
          </p>
        )}

        <div class="hidden lg:flex flex-col sm:flex-row gap-3 sm:gap-4 pt-2 sm:pt-4 justify-center lg:justify-start">
          {primaryCTA && (
            <Button
              href={primaryCTA.href}
              openModal={primaryCTA.openModal}
              variant="primary"
              size="lg"
              track="hero-primary-cta"
              class="hero-primary-btn hero-btn-responsive rounded-full font-semibold transition-colors text-white"
            >
              {primaryCTA.text}
            </Button>
          )}

          {secondaryCTA && (
            <Button
              href={secondaryCTA.href}
              openModal={secondaryCTA.openModal}
              variant="outline"
              size="lg"
              track="hero-secondary-cta"
              class="hero-secondary-btn hero-btn-responsive rounded-full font-semibold transition-colors"
            >
              {secondaryCTA.text}
            </Button>
          )}
        </div>
      </div>

      <div class="flex flex-col items-center mt-8 lg:mt-0">
        {image && (
          <>
            <div class="relative hero-image-container">
              <div class="aspect-square rounded-full overflow-hidden shadow-2xl">
                <img
                  src={image}
                  alt={imageAlt}
                  class="w-full h-full object-cover"
                  loading="eager"
                />
              </div>
            </div>
            {imageCaption && (
              <p class="mt-4 sm:mt-6 text-center italic text-gray-600 hero-caption">
                {imageCaption}
              </p>
            )}
          </>
        )}
      </div>

      <div class="flex lg:hidden flex-col sm:flex-row gap-3 sm:gap-4 pt-2 sm:pt-4 justify-center mt-6">
        {primaryCTA && (
          <Button
            href={primaryCTA.href}
            openModal={primaryCTA.openModal}
            variant="primary"
            size="lg"
            track="hero-primary-cta"
            class="hero-primary-btn hero-btn-responsive rounded-full font-semibold transition-colors text-white"
          >
            {primaryCTA.text}
          </Button>
        )}

        {secondaryCTA && (
          <Button
            href={secondaryCTA.href}
            openModal={secondaryCTA.openModal}
            variant="outline"
            size="lg"
            track="hero-secondary-cta"
            class="hero-secondary-btn hero-btn-responsive rounded-full font-semibold transition-colors"
          >
            {secondaryCTA.text}
          </Button>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  /* Responsive Title Sizing */
  .hero-title {
    font-size: 32px;
    line-height: 1.2;
  }

  @media (min-width: 640px) {
    .hero-title {
      font-size: 42px;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 50px;
    }
  }

  @media (min-width: 1536px) {
    .hero-title {
      font-size: 64px;
    }
  }

  /* Responsive Description Sizing */
  .hero-description {
    font-size: 16px;
  }

  @media (min-width: 640px) {
    .hero-description {
      font-size: 18px;
    }
  }

  @media (min-width: 1024px) {
    .hero-description {
      font-size: 20px;
    }
  }

  @media (min-width: 1536px) {
    .hero-description {
      font-size: 24px;
    }
  }

  /* Responsive Button Sizing */
  .hero-btn-responsive {
    padding: 12px 24px;
    font-size: 15px;
  }

  @media (min-width: 640px) {
    .hero-btn-responsive {
      padding: 14px 32px;
      font-size: 16px;
    }
  }

  @media (min-width: 1024px) {
    .hero-btn-responsive {
      padding: 12px 32px;
    }
  }

  @media (min-width: 1536px) {
    .hero-btn-responsive {
      padding: 16px 40px;
      font-size: 18px;
    }
  }

  /* Responsive Image Sizing */
  .hero-image-container {
    width: 280px;
  }

  @media (min-width: 640px) {
    .hero-image-container {
      width: 320px;
    }
  }

  @media (min-width: 1024px) {
    .hero-image-container {
      width: 384px;
    }
  }

  @media (min-width: 1536px) {
    .hero-image-container {
      width: 480px;
    }
  }

  /* Responsive Caption Sizing */
  .hero-caption {
    font-size: 15px;
  }

  @media (min-width: 640px) {
    .hero-caption {
      font-size: 16px;
    }
  }

  @media (min-width: 1024px) {
    .hero-caption {
      font-size: 18px;
    }
  }

  @media (min-width: 1536px) {
    .hero-caption {
      font-size: 20px;
    }
  }

  /* Button Styles */
  .hero-primary-btn {
    background-color: var(--color-orange);
  }

  .hero-primary-btn:hover {
    background-color: var(--color-orange-dark);
  }

  .hero-secondary-btn,
  .hero-secondary-btn:link,
  .hero-secondary-btn:visited {
    background-color: white !important;
    border: 2px solid #40496D !important;
    border-color: #40496D !important;
    color: #343A5A !important;
  }

  .hero-secondary-btn:hover,
  .hero-secondary-btn:active,
  .hero-secondary-btn:focus {
    background-color: var(--color-orange) !important;
    border: 2px solid var(--color-orange) !important;
    border-color: var(--color-orange) !important;
    color: white !important;
  }

  /* Animations */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-right {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animate-fade-in-right {
    animation: fade-in-right 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }
</style>
