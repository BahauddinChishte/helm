---
import Button from './Button.astro';

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  primaryCTA?: { text: string; href?: string; openModal?: boolean };
  secondaryCTA?: { text: string; href?: string; openModal?: boolean };
  image?: string;
  imageAlt?: string;
  imageCaption?: string;
}

const {
  title,
  subtitle,
  description,
  primaryCTA,
  secondaryCTA,
  image,
  imageAlt = '',
  imageCaption
} = Astro.props;
---

<section class="relative bg-gray-50 overflow-hidden pt-24 pb-32 sm:pt-28 sm:pb-40 lg:pt-32 lg:pb-48">
  <div class="w-full px-8 sm:px-12 lg:px-16">
    <div class="grid grid-cols-1 lg:grid-cols-[65%_35%] gap-8 items-center">
      <div class="space-y-8 max-w-2xl">
        <h1 class="font-semibold leading-tight" style="color: rgb(52, 58, 90); font-size: 50px;">
          {title}
        </h1>

        {description && (
          <p class="text-lg sm:text-xl leading-relaxed" style="color: rgb(52, 58, 90);">
            {description}
          </p>
        )}

        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          {primaryCTA && (
            <Button
              href={primaryCTA.href}
              openModal={primaryCTA.openModal}
              variant="primary"
              size="lg"
              track="hero-primary-cta"
              class="hero-primary-btn px-8 py-3 rounded-full font-semibold transition-colors text-white"
            >
              {primaryCTA.text}
            </Button>
          )}

          {secondaryCTA && (
            <Button
              href={secondaryCTA.href}
              openModal={secondaryCTA.openModal}
              variant="outline"
              size="lg"
              track="hero-secondary-cta"
              class="hero-secondary-btn border-2 px-8 py-3 rounded-full font-semibold transition-colors"
            >
              {secondaryCTA.text}
            </Button>
          )}
        </div>
      </div>

      <div class="flex flex-col items-center">
        {image && (
          <>
            <div class="relative w-96">
              <div class="aspect-square rounded-full overflow-hidden shadow-2xl">
                <img
                  src={image}
                  alt={imageAlt}
                  class="w-full h-full object-cover"
                  loading="eager"
                />
              </div>
            </div>
            {imageCaption && (
              <p class="mt-6 text-center italic text-gray-600 text-lg">
                {imageCaption}
              </p>
            )}
          </>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-primary-btn {
    background-color: var(--color-orange);
  }

  .hero-primary-btn:hover {
    background-color: var(--color-orange-dark);
  }

  .hero-secondary-btn {
    background-color: white;
    border-color: #343A5A !important;
    color: #343A5A !important;
  }

  .hero-secondary-btn:hover,
  .hero-secondary-btn:active {
    background-color: var(--color-orange);
    border-color: var(--color-orange);
    color: white;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-right {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animate-fade-in-right {
    animation: fade-in-right 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }
</style>
